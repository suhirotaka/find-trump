{
  "manifest_version": 2,
  "name": "Find Trump!",
  "version": "1.0.0",

  "default_locale": "en",
  "description": "__MSG_extDescription__",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "browser_action": {
    "default_title": "Find Trump",
    "default_icon": "icon32.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["jquery.min.js", "util.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "storage", "*://*/*"
  ],
  "web_accessible_resources": [
    "imgs/trump/*.png",
    "imgs/trump/*.gif",
    "imgs/trump/*.jpeg",
    "imgs/trump/*.jpg"
  ]
}
